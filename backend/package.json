{
    "name": "dpp-backend",
    "version": "1.0.0",
    "description": "Backend services for DPP Trust System",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start:identity": "node dist/services/identity/index.js",
        "start:witness": "node dist/services/witness/index.js",
        "start:watcher": "node dist/services/watcher/index.js",
        "dev:identity": "tsx watch services/identity/index.ts",
        "dev:witness": "tsx watch services/witness/index.ts",
        "dev:watcher": "tsx watch services/watcher/index.ts",
        "generate-demo-logs": "tsx scripts/generate-demo-logs.ts"
    },
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "merkletreejs": "^0.3.11",
        "ethers": "^6.9.0",
        "@noble/hashes": "^1.3.3",
        "@noble/ed25519": "^2.0.0",
        "@noble/curves": "^1.2.0",
        "cron": "^3.1.6",
        "dotenv": "^16.3.1",
        "didwebvh-ts": "^2.5.6"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.10.9",
        "@types/cron": "^2.4.0",
        "typescript": "^5.3.0",
        "tsx": "^4.7.0"
    }
}